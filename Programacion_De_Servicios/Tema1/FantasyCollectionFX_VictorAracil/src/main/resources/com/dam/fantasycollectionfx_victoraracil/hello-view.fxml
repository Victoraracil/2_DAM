<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.dam.fantasycollectionfx_victoraracil.HelloController">

    <!--Margin-->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!--Main table-->
    <center>
        <TableView fx:id="tableView" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="colCode" text="Code" prefWidth="120"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
                <TableColumn fx:id="colRarity" text="Rarity" prefWidth="100"/>
                <TableColumn fx:id="colDate" text="Obtained Date" prefWidth="130"/>
            </columns>
        </TableView>
    </center>

    <!--Buttons, filters,... -->
    <bottom>
        <VBox spacing="10">

            <!--Form-->
            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints percentWidth="15"/>
                    <ColumnConstraints percentWidth="35"/>
                    <ColumnConstraints percentWidth="15"/>
                    <ColumnConstraints percentWidth="35"/>
                </columnConstraints>

                <Label text="Code:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCode" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtType" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Rarity:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <TextField fx:id="txtRarity" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <Label text="Obtained date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>

            <!--Buttons-->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Add" onAction="#onAddItem" prefWidth="100"/>
                <Button text="Update" onAction="#onUpdateItem" prefWidth="100"/>
                <Button text="Delete" onAction="#onDeleteItem" prefWidth="100"/>
            </HBox>

            <!--Filters and search-->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Filter:"/>
                <ComboBox fx:id="comboFilter" prefWidth="200"/>
                <Button text="Apply Filter" onAction="#onApplyFilter"/>
                <Label text="Search:"/>
                <TextField fx:id="txtSearch" onKeyReleased="#onSearch" promptText="Type to search..." prefWidth="200"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>

